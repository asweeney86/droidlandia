<p id="notice"><%= notice %></p>

<h1><%= @host.hostname %></h1>

<br>

  <table class="table table-striped table-bordered">
      <h3>Vitals</h3>
      <thead>
          <tr>
            <th>OS</th>
            <th>Release</th>
            <th>Version</th>
          </tr>
      </thead>
      <tbody>
          <tr>
            <td><%= @host.os %></td>
            <td><%= @host.release %></td>
            <td><%= @host.version %></td>
          </tr>
      </tbody>
  </table>

  <table class="table table-striped table-bordered">
      <h3>Interfaces</h3>
      <thead>
          <tr>
            <th>Name</th>
            <th>IP</th>
            <th>MAC</th>
            <th>Netmask</th>
            <th>Broadcast</th>
            <th>Bytes Sent</th>
            <th>Bytes Received</th>
          </tr>
      </thead>
      <tbody>
        <% @host.interfaces.each do |interface| %>
          <tr>
            <td><%= interface.name %></td>
            <td><%= interface.ip %></td>
            <td><%= interface.mac %></td>
            <td><%= interface.netmask %></td>
            <td><%= interface.broadcast %></td>
            <td><%= interface.bytes_sent %></td>
            <td><%= interface.bytes_rcvd %></td>
          </tr>
        <% end %>
      </tbody>
  </table>

</br>


<%= link_to 'Edit', edit_host_path(@host) %> |
<%= link_to 'Back', hosts_path %>
